@{
	ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<link rel="stylesheet" href="~/css/Usuario/login.css" asp-append-version="true" />

<body class="body1">
	<div class="container1">
		<div class="row">
			<div class="col-md-offset-5 col-md-4 text-center">
				<h1><i class="bi bi-moon-stars-fill">Poetry</i></h1>
				<div class="form-login">
					</br>
					<h4>Login</h4>
					</br>
					<input type="text" tabindex="1" id="userName" class="form-control input-sm chat-input" placeholder="username" />
					</br></br>
					<input type="password" tabindex="2" id="userPassword" class="form-control input-sm chat-input" placeholder="password" />
					<br />
					<a asp-action="SolicitarRecuperacaoSenha" asp-controller="Autenticacao" class="esqueceusenha" style="font-size:18px;"> Esqueceu a senha?</a>
					<div class="wrapper">
						<span class="group-btn">
							<a tabindex="3" onclick="Login();" class="btn btn-danger btn-lg botao">Sing-in <i class="bi bi-arrow-bar-right"></i></a>
							<a tabindex="4" asp-controller="Usuarios" asp-action="Cadastro" class="btn btn-secondary btn-lg  botao">Register <i class="bi bi-person-hearts"></i></a>
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	</br></br></br>
</body>
